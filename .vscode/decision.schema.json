  "title": "Schema for providing an interactive checklist to make decision",
  "properties": {
    "title": {
      "type": "string",
      "description": "A short title for the main decision",
      "minLength": 1,
      "maxLength": 40
    },
    "description": {
      "type": "string",
      "description": "A description or hint for the main decision",
      "minLength": 1,
      "maxLength": 120
    },
    "questions": {
      "type": "array",
